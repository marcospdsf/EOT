  <zone name="int_testing_grid" file="interiors/abstract/testing_grid.tmx"
    accessible="false">
  </zone>

  <zone name="int_vault" file="interiors/abstract/vault.tmx"
    accessible="false">
  </zone>

  <zone name="int_adventure_island" file="interiors/abstract/adventure_island.tmx"
